@model MyBlog.Models.Posts

@{
    ViewData["Title"] = Model.Title;
}


<header class="container-fluid">
   <div class="row">
        <img src="@("~/img/" + Model.Image)" asp-append-version=true />
    </div>
</header>
<!-- Main Content-->
<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="post-body">
                    <h4>
                        @Html.DisplayFor(modelItem => Model.Title)
                    </h4>
                    <p class="small">@Html.DisplayFor(modelItem => Model.Date) | @Html.DisplayFor(modelItem => Model.Author)</p>
                </div>
                <div class="mb-4">
                    <p>
                        @Html.DisplayFor(modelItem => Model.Intro)
                    </p>
                </div>
                <div>
                    @Html.Raw(Model.Article)
                </div>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
            <a asp-action="Create">Add new post</a> |
            <a asp-action="Index">Back to List</a>
        </div>
        }
    </div>
</div>
